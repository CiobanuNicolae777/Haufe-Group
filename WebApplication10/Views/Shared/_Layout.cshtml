    <script>
            var imageElement = document.getElementById('image');

            var images = [
                "@Url.Content("~/Image/tro.jpg")",
                "@Url.Content("~/Image/tro2.jpg")",
                "@Url.Content("~/Image/tro3.jpg")",
                "@Url.Content("~/Image/tro4.jpg")",
                "@Url.Content("~/Image/tro5.jpg")",
                "@Url.Content("~/Image/tro6.jpg")",
                "@Url.Content("~/Image/tro7.jpg")",
                "@Url.Content("~/Image/tro8.jpg")",
                "@Url.Content("~/Image/tro9.jpg")",
                "@Url.Content("~/Image/tro10.jpg")"
            ];
        var currentIndex = parseInt(localStorage.getItem('currentIndex')) || 0;

        function changeImage() {
            currentIndex = (currentIndex + 1) % images.length;
            imageElement.src = images[currentIndex];
            localStorage.setItem('currentIndex', currentIndex);
        }

        changeImage();

        setInterval(changeImage, 3000);
    </script>

