            padding: 0;
            background-color: #e0e0e0;
        }

        header {
            background-color: #87ceeb;
            color: #000000;
            display: flex;
            flex-direction: column;
        }

        .images-row {
            display: flex;
            justify-content: right;
            margin-top: 5px;
        }

        .image-container {
            margin: 0 45px;
        }

            .image-container img {
                width: 300px; 
                height: 200px;
            }



        #afisareDataOra {
            font-size: 20px; 
        }

        b {
            font-size: 24px; 
        }


        h1 {
            font-family: 'Times New Roman', serif; 
            font-size: 2em;
            font-weight: bold;
            margin: 10px 0; 
        }
    </style>



    <script>

        function afiseazaDataOra() {
            var dataOra = new Date();
            var afisare = document.getElementById('afisareDataOra');

            var options = { day: '2-digit', month: '2-digit', year: 'numeric', hour: '2-digit', minute: '2-digit', hour12: true };
            var dataOraFormata = dataOra.toLocaleDateString('en-EN', options);

            afisare.innerHTML = dataOraFormata;
        }

        setInterval(afiseazaDataOra, 1000);

    </script>


