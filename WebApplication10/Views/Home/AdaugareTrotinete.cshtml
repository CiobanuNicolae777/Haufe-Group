@model WebApplication10.Models.AdaugareTrotinete

@{
    ViewBag.Title = "AdaugareTrotinete";
}

<h2>AdaugareTrotinete</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>AdaugareTrotinete</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <strong>@Html.LabelFor(model => model.Oras, "Alegeți Orașul:", htmlAttributes: new { @class = "control-label col-md-2" })</strong>
        <div class="col-md-10">
            @Html.DropDownList("Oras", new List<SelectListItem>
            {
                new SelectListItem { Text = "Bucuresti", Value = "București" },
                new SelectListItem { Text = "Cluj-Napoca", Value = "Cluj-Napoca" },
                new SelectListItem { Text = "Timișoara", Value = "Timișoara" },
                new SelectListItem { Text = "Iași", Value = "Iași" },
                new SelectListItem { Text = "Craiova", Value = "Craiova" },
            }, "Alegeți un oraș", new { @class = "form-control" })
        </div>
    </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NrTrotinete, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NrTrotinete, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NrTrotinete, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}
